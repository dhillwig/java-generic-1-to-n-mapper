{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://address",
  "title": "Address",
  "type": "object",
  "properties": {
    "street": {
      "description": "The address.",
      "type": "string"
    },
    "postal_code": {
      "description": "The postal code.",
      "type": "string"
    },
    "city": {
      "description": "The city.",
      "type": "string"
    },
    "country": {
      "description": "The country.",
      "default": "Germany",
      "enum": [
        "Germany",
        "United States of America"
      ]
    }
  },
  "required": [
    "street",
    "postal_code",
    "city",
    "country"
  ]
}